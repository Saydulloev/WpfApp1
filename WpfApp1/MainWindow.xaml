<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0.1">
                <GradientStop Color="DarkBlue"/>
                <GradientStop Color="LightBlue" Offset="0.1"/>
                <GradientStop Color="DarkBlue" Offset="0.9"/>
                <GradientStop Color="LightBlue" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Btn1"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Width="150"
Height="30"
FontSize="17"
Content="кнопка"
Foreground="#006699"
BorderBrush="#303030" Click="Btn1_Click" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                    <GradientStop Color="DarkBlue"/>
                    <GradientStop Color="LightBlue" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
